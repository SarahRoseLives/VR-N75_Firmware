    <include layout="@layout/factory_dev_id" />
    <androidx.gridlayout.widget.GridLayout android:id="@id/actions" android:paddingTop="4.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" app:columnCount="2">
