        <Button android:id="@id/RestoreFactorySettings" android:layout_height="wrap_content" android:text="恢复出厂状态" app:layout_columnWeight="1.0" app:layout_gravity="fill_horizontal" style="@style/Widget.AppCompat.Button.Colored" />
    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>